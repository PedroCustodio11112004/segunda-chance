<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lista de Cursos</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <h1 class="mb-4">Lista de Cursos</h1>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Nome do Curso</th>
                    <th>Descrição</th>
                    <th>Duração (Horas)</th>
                    <th>Preço</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                <% if (courses.length > 0) { %>
                    <% courses.forEach(course => { %>
                        <tr>
                            <td><%= course.course_id %></td>
                            <td><%= course.name %></td>
                            <td><%= course.description %></td>
                            <td><%= course.duration %> horas</td>
                            <td>R$ <%= course.price %></td>
                            <td>
                                <form action="/courses/<%= course.course_id %>/delete" method="POST" style="display:inline;">
                                    <button type="submit" class="btn btn-danger">Excluir</button>
                                </form>
                            </td>
                        </tr>
                    <% }) %>
                <% } else { %>
                    <tr>
                        <td colspan="6">Nenhum curso cadastrado</td>
                    </tr>
                <% } %>
            </tbody>
        </table>
        <a href="/courses/add" class="btn btn-primary mt-3">Adicionar Curso</a>
        <a href="/" class="btn btn-light mt-3">Voltar à Página Inicial</a> <!-- Botão para voltar -->
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
